<div class="mt4">
    <div class="row">

        {{#each products}}
        <div class="col-sm-6 col-lg-4" style="border border-dark">
            <div class="card-body card-product border">
            <img class="card-img-top" src="{{this.thumbnail}}" alt="{{this.name}}">
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text"></p>
                <a href="#" class="btn btn-primary">Details</a>
            </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>